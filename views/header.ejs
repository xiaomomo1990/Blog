<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/acticle/index">My Blog</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li <% if(classes == "index"){ %> class="active" <% }else{ %> class=""<% } %> title="主页"><a href="/acticle/index">主页</a></li>
			<li <% if(classes == "译文"){ %> class="active" <% }else{ %> class=""<% } %> title="译文"><a href="/acticle/译文">译文</a></li>
			<li <% if(classes == "心情随笔"){ %> class="active" <% }else{ %> class=""<% } %> title="心情随笔"><a href="/acticle/心情随笔">心情随笔</a></li>
			<li <% if(classes == "技术文"){ %> class="active" <% }else{ %> class=""<% } %> title="技术文"><a href="/acticle/技术文">技术文</a></li>
			<li <% if(classes == "关于我"){ %> class="active" <% }else{ %> class=""<% } %> title="关于我"><a href="/关于我">关于我</a></li>
			<% if (user) { %>
			<li <% if(classes == "post"){ %> class="active" <% }else{ %> class=""<% } %>><a title="发表" href="/post">发表文章</a></li>
			<% } %>  
		   </ul>
		   <ul class="nav navbar-nav navbar-right">
<% if (user) { %>
  <li><a title="退出" href="/logout">退出</a></li>
<% } else { %>
  <li <% if(classes == "login"){ %> class="active" <% }else{ %> class=""<% } %>><a title="登录" href="/login">登录</a></li>
  <li <% if(classes == "reg"){ %> class="active" <% }else{ %> class=""<% } %>><a title="注册" href="/reg">注册</a></li>
<% } %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
<div class="container mainCotainer">
	<div class="row">
		<div class="col-md-12">
	<% if (success) { %>
  <div class="alert alert-success" role="alert"><%= success %></div>
<% } %>
<% if (error) { %>
  <div class="alert alert-warning" role="alert"><%= error %> </div>
<% } %>